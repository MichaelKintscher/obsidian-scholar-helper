{
    "manifest_version": 3,
    "name": "Obsidian Scholar Helper",
    "version": "1.0",
    "description": "Helps ingest paper data from sources beyond what the Obsidian Scholar plugin supports.",
    "homepage_url": "https://github.com/MichaelKintscher/obsidian-scholar-helper/",
    "icons": {
        "48": "icons/icon_48.svg",
        "96": "icons/icon_96.svg"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "@obsidian-scholar-helper.kintscher.dev",
            "data_collection_permissions": {
                "required": ["websiteContent"]
            }
        }
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "page_action": {
        "default_icon": "icons/icon_32.svg",
        "default_title": "Open Obsidian Scholar Helper",
        "default_popup": "popup/extract_paper.html",
        "show_matches": [
            "https://dl.acm.org/*",
            "https://ieeexplore.ieee.org/*"
        ]
    },
    "commands": {
        "send-to-obsidian": {
            "suggested_key": {
                "default": "Ctrl+Alt+O"
            },
            "description": "Send the current paper to Obsidian Scholar"
        }
    }
}